{
    "name": "ICWS Panel",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "Devtools panel for ICWS development",
    "devtools_page": "devtools.html",
    "minimum_chrome_version": "18.0",
    "background": {
        "scripts": ["js/background.js"]
    },
    "content_scripts": [
        {
            "js": ["js/content.js"],
            "matches": [
                "*://localhost/*",
                "*://127.0.0.1/*",
                "*://*.inin.com/*",
                "*://*.ininlab.com/*",
                "*://*.genesys.com/*",
                "*://*.qfun.com/*",
                "*://*.dev2000.com/*"
            ]
        }
    ],
    "icons": {
        "16": "icons/inin-16.png",
        "48": "icons/inin-48.png",
        "128": "icons/inin-128.png",
        "256": "icons/inin-256.png"
    },
    "permissions": [
        "*://localhost/*",
        "*://127.0.0.1/*",
        "*://*.inin.com/*",
        "*://*.ininlab.com/*",
        "*://*.genesys.com/*",
        "*://*.qfun.com/*",
        "*://*.dev2000.com/*"
    ]
}
